                        </Grid.ColumnDefinitions>
                        <local:ParamerusChartSpinEdit Grid.Row="0"
                                                      Grid.Column="0"
                                                      Margin="0,0,0,5"
                                                      NameValue="OVF:"
                                                      UnitsName="V"
                                                      HorizontalAlignment="Center"/>
                        <local:ParamerusChartSpinEdit Grid.Row="0"
                                                      Grid.Column="1"
