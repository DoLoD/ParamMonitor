                </dxlc:LayoutControl>
                <dxlc:LayoutControl DockPanel.Dock="Bottom"
                                    VerticalAlignment="Stretch"
                                    Padding="20,0,20,0">
                    <oxy:PlotView x:Name="MainChart" DataContext="{Binding ElementName=ParamChartPanel}" Model="{Binding Path=MyModel}"/>
                </dxlc:LayoutControl>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
