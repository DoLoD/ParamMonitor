                                                      HorizontalAlignment="Center"/>
                        <local:ParamerusChartSpinEdit Grid.Row="0"
                                                      Grid.Column="2"
                                                      Margin="0,0,0,5"
                                                      NameValue="OVF:"
                                                      UnitsName="V"
                                                      HorizontalAlignment="Center"/>
                        <local:ParamerusChartSpinEdit Grid.Row="1"
                                                      Grid.Column="0"
                                                      Margin="0,0,0,5"
                                                      NameValue="UVF:"
                                                      UnitsName="V"
                                                      HorizontalAlignment="Center"/>
                        <local:ParamerusChartSpinEdit Grid.Row="1"
